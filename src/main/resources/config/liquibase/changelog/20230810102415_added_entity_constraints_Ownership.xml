<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Ownership.
    -->
    <changeSet id="20230810102415-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="current_vehicle_id"
                                 baseTableName="ownership"
                                 constraintName="fk_ownership__current_vehicle_id"
                                 referencedColumnNames="id"
                                 referencedTableName="application_user"
                                 />

        <addForeignKeyConstraint baseColumnNames="vehicle_id"
                                 baseTableName="ownership"
                                 constraintName="fk_ownership__vehicle_id"
                                 referencedColumnNames="id"
                                 referencedTableName="vehicle"
                                 />

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="ownership"
                                 constraintName="fk_ownership__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="application_user"
                                 />
    </changeSet>
</databaseChangeLog>
